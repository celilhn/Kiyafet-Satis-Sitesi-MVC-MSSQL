@model E_Ticaret_Giyim.Models.KULLANICILAR

<div class="row justify-content-md-center">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        @using (Html.BeginForm("Giris", "Home", FormMethod.Post))
        {
            //@Html.ValidationSummary()
            @Html.AntiForgeryToken()

            <div class="card">

                <div class="card-body">

                    <div class="form-group">
                        Kullanıcı Email
                        @Html.TextBoxFor(m => m.Kullanici_Email, "", new { @class = "form-control", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Kullanici_Email, "", new { @class = "badge badge-danger" })
                        @if (ViewBag.error != null)
                        {
                            <span class="badge badge-danger">@ViewBag.error</span>
                        }
                    </div>

                    <div class="form-group">
                       Kullanıcı Şifre
                        @Html.PasswordFor(m => m.Kullanici_Sifre, new { @class = "form-control", @placeholder = "Şifre" })
                        @Html.ValidationMessageFor(m => m.Kullanici_Sifre, "", new { @class = "badge badge-danger" })
                    </div>

                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-danger" value="Giriş" />
                    </div>
                </div>
            </div>

        }
    </div>
    <div class="col-md-4">
    </div>
</div>
