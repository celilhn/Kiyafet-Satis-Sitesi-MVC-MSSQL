@using PagedList
@using PagedList.Mvc
@using E_Ticaret_Giyim.Models
@model IPagedList<URUNLER>



<div id="dvMusteriListesi">
    <!-- Main Content start-->
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div id="options">
                        <ul id="filters" class="option-set clearfix" data-option-key="filter">
                            @*@foreach (var item in Model.Categories)
                                {
                                    <li>@Html.ActionLink(@item.Kategori_Ad, "Index", new { item = 0, kategoriItem = item.Kategori_ID })</li>
                                }*@
                            @*<li><a href="#filter" data-option-value="*" class="selected">All</a></li>*@
                        </ul>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="row">
                        <div class="portfolio three-column">
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 web jquery item">
                                    <div class="portfolio-item">
                                        <a href="~/images/@item.Urun_Fotograf" class="portfolio-item-link" data-rel="prettyPhoto">
                                            <span class="portfolio-item-hover"></span>
                                            <span class="fullscreen"><i class="fa fa-search"></i></span><img src="~/images/@item.Urun_Fotograf" width="231" height="349" />
                                        </a>
                                        <div class="portfolio-item-title">
                                            @Html.ActionLink(@item.Urun_Marka, "UrunDetay", new { id = item.Urun_ID })
                                            <p>
                                                @item.Urun_Aciklama
                                            </p>
                                            <p>
                                                @item.Urun_Fiyat ₺
                                            </p>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>

                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main Content end-->
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12"></div>
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        @Html.PagedListPager(Model, _sayfaNo => Url.Action("Index", "Home", new { SayfaNo = _sayfaNo }))
    </div>
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12"></div>
    
</div>