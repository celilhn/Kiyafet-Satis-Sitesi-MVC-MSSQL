@*ROL INDEX*@
@model IEnumerable<E_Ticaret_Giyim.Models.ROL>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Roller Sayfası</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col"> Rol ID</th>
            <th scope="col"> Rol Ad</th>
            <th scope="col"> </th>
            <th scope="col"> </th>
            <th scope="col"> </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rol_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol_Ad)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Rol_ID })
            </td>
            <td>
                @Html.ActionLink("Detay", "Details", new { id = item.Rol_ID })
            </td>
            <td>
                @Html.ActionLink("Sil", "Delete", new { id = item.Rol_ID })
            </td>

        </tr>
        }
    </tbody>
</table>
